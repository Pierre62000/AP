		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<title>
			{% block title %}Simpléduc -
			{% endblock %}
		</title>
		<style>
			.navbar {
				background: #000000
			}

			.nav-item::after {
				content: '';
				display: block;
				width: 0;
				height: 2px;
				background: #808080;
				transition: 0.4s
			}

			.nav-item:hover::after {
				width: 100%
			}

			/*.navbar-dark .navbar-nav .active>.nav-link,*/
			.navbar-dark .navbar-nav .nav-link.active, .navbar-dark .navbar-nav .nav-link.show, .navbar-dark .navbar-nav .show>.nav-link,
			.navbar-dark .navbar-nav .nav-link: focus, /*.navbar-dark .navbar-nav .nav-link:hover*/
			{
				color: #808080
			}

			.nav-link {
				padding: 9px 5px;
				transition: 0.2s
			}
			body {
				background-image: url("https://www.designbolts.com/wp-content/uploads/2013/02/Light-aluminum-Grey-Seamless-Pattern-For-Website-Background.jpg");
			}

			{% block style %}
			{% endblock %}
		</style>
	</head>

