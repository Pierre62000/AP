{% block title %}
	{{ parent() }}
	Utilisateurs
{% endblock %}
{% block contenu %}

	

		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Email</th>
						<th scope="col">Nom</th>
						<th scope="col">Prénom</th>
						<th scope="col">Rôle</th>
						<th scope="col"></th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% for u in liste %}

						<tr>
							<td>{{u.email}}</td>
							<td>{{u.nomUtil}}</td>
							<td>{{u.prenom}}</td>
							<td>{{u.libellerole}}</td>
							<td>
								<a href="index.php?page=utilisateurmod&id={{u.id}}" style="color:red">Modifier fiche de paie</a>
							</td>
							<td>
								<a href="index.php?page=utilisateurmod&id={{u.id}}" style="color:green">Modifier</a>
							</td>
							<td>
								<a href="index.php?page=utilisateurdel&id={{u.id}}" style="color:green">Supprimer</a>
							</td>
						</tr>

					{% endfor %}

				</tbody>
			</table>
		</div>
	

{% endblock %}
